module seven_seg (
    input char[4],
    output segs [7]
  ) {

  always {
    case(char){
      0: segs = 7b1110111; //A
      1: segs = 7b1111111; //B
      2: segs = 7b0111111; //O 
      3: segs = 7b0111110; //U
      4: segs = 7b1111000; //t 
      5: segs = 7b1111001; //E
      6: segs = 7b0110001; //r
      7: segs = 7b1000000; //-
      8: segs = 7b1111111; 
      9: segs = 7b1100111;
      default: segs = 7b0000000;
    }
  }
}